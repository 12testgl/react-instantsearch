{
  "name": "instantsearch.js",
  "version": "0.0.1",
  "description": "Instant search kit for Algolia search",
  "main": "index.js",
  "author": "Algolia <support@algolia.com>",
  "scripts": {
    "postinstall": "mkdir -p ./dist",
    "lint": "/scripts/lint.sh",
    "lint:watch": "onchange 'lib/**/*js' 'index.js' 'test/**/*js' '.eslintrc' -- npm run -s lint",
    "js:build": "./scripts/build.sh",
    "js:watch": "watchify -v -d index.js -s instantsearch -o dist/instantsearch.js",
    "dev": "./scripts/dev.sh",
    "checkstyle": "jsfmt --diff",
    "jsfmt": "jsfmt"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "browser": {
    "lodash": "lodash-compat"
  },
  "devDependencies": {
    "@algolia/jsfmt": "1.3.0",
    "babelify": "6.1.3",
    "browserify": "11.0.0",
    "envify": "3.4.0",
    "eslint-config-airbnb": "0.0.6",
    "eslint-config-algolia": "2.1.1",
    "http-server": "0.8.0",
    "onchange": "1.1.0",
    "uglifyjs": "2.4.10",
    "watchify": "3.3.0"
  },
  "dependencies": {
    "algoliasearch": "3.7.4",
    "algoliasearch-helper": "2.1.2",
    "classnames": "2.1.3",
    "hogan.js": "3.0.2",
    "lodash": "3.10.0",
    "react": "0.13.3"
  },
  "license": "MIT"
}
